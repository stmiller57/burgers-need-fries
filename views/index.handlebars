<h1>Burgers Need Fries!</h1>

<h2>Burgers available to devour</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burgersToEat devoured=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>You already ate these burgers</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burgersToEat devoured=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="cheese">Burger:</label>
        <input type="text" id="cheese" name="burger_name">
    </div>
    <button type="submit">Add a Burger</button>
</form>